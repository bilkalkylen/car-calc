{
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": true,
  "[vue]": {
    "editor.formatOnSave": false // keep off to avoid conflicts with vscode's built in linter
  },
  "prettier.disableLanguages": ["js"],
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    }
  ]
}
